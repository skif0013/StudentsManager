@model IEnumerable<MyStudentsmanager.Models.User>
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
	var name = Context?.Request.Cookies["name"];
}

<style>
	*{
		padding: 0;
		margin: 0;
	}
	body{
		font-family: Arial, sans-serif;
		color: #000;
	}
	header{
		padding: 30px 0;
		width: 100%;
		box-shadow: 0 0 10px rgba(0, 0, 0, 0.25);
		background: #2E2E2E;
	}
	.header-items{
		display: flex;
		justify-content: space-around;
		align-items: center;
		width: 80%;
		margin: auto;
	}
	.header-items p{
		font-weight: 600;
		color: #fff;
		font-size: 24px;
	}
	.header-links a{
		text-decoration: none;
		padding: 13px;
		display: inline-flex;
		float: left;
		color: #fff;
		text-align: center;
	}
	.header-links a::after{
		content: '';
		display: flex;
		position: absolute;
		width: 0%;
		background: #FFD700;
		height: 3px;
		top: 90%;
		transition: width .3s;
	}
	.header-links a:hover::after{
		content: '';
		display: flex;
		position: absolute;
		width: 30%;
		background: #FFD700;
		height: 3px;
		top: 90%;
		transition: width .3s;
	}
	li{
		display: inline-flex;
		position: relative;
	}
	th,
	td {
	  padding: 8px 10px;
	}
	td {
	  text-align: center;
	}

	tr:nth-of-type(even) {
	  background-color: #eee;
	}

	table {
	  border-collapse: collapse;
	  font-family: sans-serif;
	  font-size: 0.8rem;
	  letter-spacing: 1px;
	}

	caption {
	  caption-side: bottom;
	  padding: 10px;
	}

	main{
		width: 70%;
		margin: auto;
	}
	main h2{
		text-align: center;
		padding: 30px;
	}
	main table{
		width: 100%;
	}
	.main-content{
		justify-content: center;
		display: flex;
	}
	main p{
		text-align: center;
		padding: 10px;
	}
	main a{
		cursor: pointer;
		font-size: 18px;
	}
	main a::after{
		content: '';
	}
	main input[type="submit"]{
		width: 70%;
		font-size: 18px;
		border: none;
		cursor: pointer;
	}
</style>

<!DOCTYPE html>
<html>
<head>
	<meta charset="utf-8">
	<meta name="viewport" content="width=device-width, initial-scale=1">
	<title>

	</title>
	<link rel="stylesheet" href="style/main.css">
</head>
<body>
	<header>
		<div class="header-items">
			<div class="header-links">
				
							<a asp-action="Edit" asp-controller="Home" asp-route-id="@name">Изменить</a>
						
				<form class="deleteForm" asp-controller="Home" asp-action="Delete" method="post">
					<input type="submit" value="Удалить" />
				</form>
				<li><a href="/Home/AdminPage">Я Админ</a></li>
			</div>
			<p>@name</p>
		</div>
	</header>

	<main>
		<h2>Список пользователей</h2>
		<div class="main-content">
			<table class="table">
				<tr>
					<th>Имя</th>
					<th>Возраст</th>
					@foreach (var item in Model)
					{
					<tr>
						<td>@item.Name</td>
						<td>@item.Age</td
					</tr>
					}
			</table>
		</div>
	</main>
</body>
</html>